@require 'mixins/**/*'
@require 'components/**/**'

#wireframe-app

  .mockup-only
    text-decoration line-through

  .wireframe-app
    absolute(0, 0, 0, 0)
    text-align left

  .wireframe-non-placeholder
    background-color #fff
    display flex

  .wireframe-placeholder
    display flex

  .wireframe-placeholder-content
    margin auto

  .wireframe-workspace
    enable-flex(column)

  .wireframe-iframed-workspace
    enable-flex(column)

  .wireframe-global-nav
    width 100%
    background-color dark-blue
    padding  8px 0px 8px
    color white
    height global-nav-height
    box-sizing border-box

    enable-flex(row)

    span, i
      padding-left 0.5em
      padding-right 0.5em

    .wireframe-global-nav-content-filename
      flex-content()

    .wireframe-global-nav-name-and-help
      color blue-gray
      flex-content(0,0)
      font-size 9px


  .wireframe-iframed-workspace
    .wireframe-canvas
      top palette-and-actions-height
  .wireframe-canvas
    absolute(top: palette-and-actions-height + global-nav-height, left: 0, right: 0, bottom: 0)

    .link-view
      position inherit
      width 100%
      height 100%
      border-radius 0
      box-shadow none
      overflow auto

