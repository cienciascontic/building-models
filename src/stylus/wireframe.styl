@require 'mixins/**/*'
@require 'components/**/**'

#wireframe-app

  .mockup-only
    text-decoration line-through

  .wireframe-app
    absolute(0, 0, 0, 0)
    text-align left

  .wireframe-non-placeholder
    background-color #fff
    display flex

  .wireframe-placeholder
    display flex

  .wireframe-placeholder-content
    margin auto

  .wireframe-workspace
    enable-flex(column)
    padding-left 1em

  .wireframe-iframed-workspace
    enable-flex(column)
    padding-left 1em

  .wireframe-global-nav
    padding 10px
    height global-nav-height - 20px
    width 100%
    enable-flex(row)

    span, i
      padding-left 0.5em
      padding-right 0.5em

    .wireframe-global-nav-content-filename
      flex-content()
      text-decoration line-throug

    .wireframe-global-nav-name-and-help
      text-decoration line-through
      flex-content(0,0,100)

  .wireframe-component-palette
    height palette-and-actions-height
    width 100%
    enable-flex(row)

    .node-well
      flex-content()
      padding 6px 5px
      flex-wrap nowrap
      -webkit-flex-wrap nowrap
      overflow auto

      .proto-node
        margin 0 3px
        .img-background
          width 30px
          height 26px
        img
          width 25px
          height 25px

  .wireframe-document-actions

  .wireframe-canvas
    absolute(top: palette-and-actions-height + global-nav-height, left: 0, right: 0, bottom: 0)

    .link-view
      position inherit
      width 100%
      height 100%
      border-radius 0
      box-shadow none
      overflow auto

