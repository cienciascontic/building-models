.experiment-panel
  min-width 160px
  margin 0px
  padding 0px
  line-height 1em
  font-size 10pt
  color #444
  align-self center
  user-select none
  &.disabled
    color button-disabled
    .experiment-counter
      cursor default
      &:hover
        background white

    .count
      border 1px solid button-disabled
    .increment
      border 1px solid button-disabled


  div, span
    display inline-block

  span
    margin-right 0.5em

  .experiment-counter
    cursor pointer
    div
      background #fafafa
    &:hover
      div
        background white
        border-color #666

  .count 
    padding 2px
    border 1px solid #aaa
    width 2em
    text-align right
    border-radius 2px 0px 0px 2px
    font-weight normal

  .increment 
    padding 2px
    border 1px solid #aaa
    border-left none
    font-weight bold
    width 1.5em
    text-align center
    border-radius 0px 2px 2px 0px
