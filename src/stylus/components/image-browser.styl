modal-button()
  padding 15px
  blenderbox-label()
  font-weight bold
  font-size 15px
  color #fff
  background-color #72bfca
  border-radius(10px)
  border 0

.image-browser

  .image-browser-form
    margin-bottom 10px
    input
      padding 5px
    input[type=text]
      width 220px
      margin-right 10px
    input[type=submit]
      modal-button()

  .image-browser-header
    blenderbox-downcase()
    margin-bottom 20px
    font-size 15px

  .image-browser-results
    margin 20px 0
    max-height 220px
    overflow auto
    img
      width 50px
      height 50px
      display inline
      margin 0 15px 15px 15px
      cursor pointer

    .in-palette
      opacity 0.25
      cursor not-allowed

  .image-browser-preview-image
    margin-bottom 20px
    display inline-block
    img
      width 100px
      height 100px
    a
      blenderbox-label()
      display block
      margin-top 10px
      width 100px
      text-align center
      text-decoration none
      color #72bfca
    span
      margin-left 3px

  .image-browser-preview-add-image
    margin-left 30px
    display inline-block

    button
      modal-button()
      position relative
      top -60px

  .image-browser-preview-metadata
    margin-top 40px


