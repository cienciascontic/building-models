.header
  margin 10px 0px
  font-size 15px

.tabbed-panel
  .workspace-tab-component.image-browser
    width 80%

.image-search-dialog
  height 380px

  .image-search-dialog-form
    margin-bottom 10px
    input
      padding 5px
    input[type=text]
      width 220px
      margin-right 10px
    input[type=submit]
      modal-button()

  .image-collection-bottom-bar
    margin-top: -11px;
    display: flex;
    flex-direction: row-reverse;


  input.small-button[type=submit]
    modal-button($thickness:7px)
    label-font(weight:bold, size:13px)
    z-index: 10

  .image-search-dialog-results
    position absolute
    margin 16px 0px
    bottom 0px
    top 0px
    overflow auto

    &.show-all
      margin-top: 0
      overflow auto
    img
      max-width 50px
      max-height 50px
      display inline
      margin 0 11px 11px
      cursor pointer

    .in-palette
      opacity 0.25
      cursor not-allowed
  .image-search-dialog-pagination
    position absolute
    left 0
    right 0
    bottom 0
    text-align center
    .image-search-page-link
      margin 0 3px
    .image-search-prev-next-link
      margin 0 3px
      text-decoration none
  .image-search-main-results
    height 300px
    &.no-results
      height 260px
    &.full-height
      height 100%
    .image-search-section
      position relative
  .image-search-provider-message
    margin-top: 10px
    text-align: center

.preview-image
  margin-bottom 20px
  display inline-block
  img
    max-width 100px
    max-height 100px
  a
    label-font()
    display block
    margin-top 10px
    width 100px
    text-align center
    text-decoration none
    color #72bfca
  span
    margin-left 3px

.preview-add-image
  margin-left 30px
  display inline-block

  button
    modal-button()
    position relative
    top -35px

.preview-metadata
  margin-top 40px

.link-dialog, .my-computer-dialog
  input[type=text]
    width 220px
    margin-left 10px
    padding 5px
  input[type=submit]
    modal-button()
    margin-top 20px
