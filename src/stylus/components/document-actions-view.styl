.document-actions
  enable-flex(justify: flex-end, alignItems: center)
  width 100%
  .misc-actions
    padding-left 22px
    color #666
    font-size 12px
    i
      padding-right 0.5em
      font-size 30px
      cursor pointer
      no-select()
      &.disabled
        color #BBB
        cursor not-allowed
      &:hover:not(.disabled)
        color #444
    i.error
      color #AF0000
      &:hover
        text-shadow none
