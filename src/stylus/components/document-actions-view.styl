.document-actions
  enable-flex(justify: flex-end, alignItems: center)
  width 100%
  .misc-actions
    padding-left 22px
    color #666
    font-size 12px
    i
      padding-right 0.5em
      font-size 30px
      cursor pointer
      no-select()
    i.error
      color #AF0000
      &:hover
        text-shadow none
    a
      color #666
      text-decoration none

  .toolbar
    display inline-flex

    .toolbar-button
      text-align center
      padding-right 1em
      cursor pointer
      no-select()
      i
        padding 0
      &.disabled
        color #BBB
        cursor not-allowed
      &:hover:not(.disabled)
        color #444
