.build-info-bottom-bar
  transition 0.2s
  position fixed
  bottom 0px
  right 0px
  width 100%
  background-color bbgray
  color dark-gray
  opacity 0.7
  &:hover
    opacity 1.0

  .build-info-button
    float right
    font-size 8px
    padding 1px
    padding-right 1em
    cursor pointer

.BuildInfoView
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background-color: hsla(1,0,1%,0.2)
  enable-flex(alignContent:center, alignItems:center, justify:center)
  z-index 10
  a
    color black
    font-size 1.2em
    text-decoration none
  .content
    padding 3em
    border-radius 5px
    box-shadow 2px 2px 10px
    background-color: hsla(1,100%,100%,1)
    font-family monospace
    font-size 16px
    color black
    tr
      td.key
        padding .4em
        text-align right
        color gray
      td.value
        text-align left
        font-weight bold
        color dark-blue
