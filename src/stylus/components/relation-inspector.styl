colored-span(color)
  background-color color
  color white
  padding-left  4px
  padding-right 4px
  border-radius 4px

.relation-inspector
  .tabbed-panel
    width: 400px
  .inspector-content.group
      padding 0px
      width 100%

  label-font()
  text-transform none
  font-size 14px
  width 100%

  .link-relation-view
    box-sizing border-box
    line-height 1.5em
    .source
      colored-span(green-blue)

    .target
      colored-span(blue-gray)

    enable-flex(wp:wrap)

  .bb-select
    margin-left 0px
    margin-top 0.25em
    overflow hidden
    label
      font-weight bold
      font-size 1em
      width initial
      margin 5px
      color #666

  .small
    font-size 6pt
    padding 0px
    margin 0px
    display inline-block

  .full
    width 100%

  .half
    max-width 50%

  .right
    text-align right

  .center
    text-align center

  .left
    text-align left

  .bottom
    width 100%
    margin-top 8px
    border-top 4px solid green-blue

  .graph
    color #02889d
    font-size 80px
    width 100%
    margin 20px
