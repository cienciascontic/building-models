$deleteColor = hsl(1,50%,50%)

.elm
  *
    no-select()
  position absolute
  margin 0px
  border-radius 5px
  background-color none
  text-align center

  .img-background
    padding 2px
    border-radius 5px
    background-color white
    border 2px solid
    margin-bottom 9px
    margin-left auto
    margin-right auto
    width 50px
    height 50px

  &.selected
    box-shadow 2px 2px 2px hsla(0,0,0,0.2)
    border-radius 5px
    background-color white
    border 2px solid
    height 164px
    width 110px
    margin-left -25px
    margin-top -10px
    box-shadow: 0px 1px 1px 0px rgba(0, 0, 0, 0.25)
    .img-background
      margin 1em
      border 2px solid hsla(0,0,100,0.0)
      padding 0px
      margin-left auto
      margin-right auto
      background-color none
      border-radius 5px
      img
        border-radius 5px
        border 2px solid


    .connection-source
      position absolute
      box-sizing padding-box
      top 25px
      background-color white
      right 16px
      border-radius 18px
      width 18px
      height 18px
      background-image url("../img/bb-chrome/btn-nodelink.svg")
      background-size 10px
      background-position center
      background-repeat no-repeat
      border 2px solid
    &:hover
      .img-background
        box-shadow none


  &:hover
    .img-background
      box-shadow 0px 1px 1px 0px rgba(0, 0, 0, 0.25)

  img
    max-width 42px
    max-height 42px
    padding 0px
    margin 0px

  .node-title
    default-font(size:10px)
    color dark
    max-width 100px
    margin-left auto
    margin-right auto

  .delete-box
    margin 2px
    padding 0px
    border-radius 3px
    color $deleteColor
    opacity 0.2
    font-size 18pt
    width 1em
    height 1em
    text-align center
    vertical-align center

    &:hover, .focus
      opacity 0.9
.node-link-button
  opacity 0.0

.node-link-target
  opacity 0.0

.label
  no-select()
  background-color hsla(0,0,100,0.8)
  margin-top 1.2em
  border-radius 8px
  padding 2px 8px
  color med-blue
  font-size 10px
