$deleteColor = hsl(1,50%,50%)

.elm
  *
    -webkit-touch-callout none
    -webkit-user-select none
    -khtml-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
  position absolute
  margin 0px
  border-radius 5px
  background-color none
  text-align center

  .img-background
    padding 0px
    border-radius 4px
    border 1px solid #bbb
    background-color white
    width 108px
    height 150px

  img
    width 100px
    height 100px

  .node-title
    font-face sans-serif
    padding 0px
    font-size 12pt
    border-radius 8px
    padding: 0.2em
    opacity 0.9

  .delete-box
    margin 2px
    padding 0px
    border-radius 3px
    color $deleteColor
    opacity 0.2
    font-size 18pt
    width 1em
    height 1em
    text-align center
    vertical-align center

    &:hover, .focus
      opacity 0.9

  &.selected
    .img-background
      border 2px solid gold

.label
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none
  background-color white
  border-radius 8px
  padding 0.5em
  opacity 0.95
  cursor: pointer

.selected
  background-color #FFFF33
  box-shadow 3px 3px 12px hsla(0,0,0,0.2)

._jsPlumb_endpoint
  opacity 0.1
