  .wireframe-inspector-panel
    absolute(top: palette-and-actions-height + global-nav-height, right: 0, bottom: 0, width: inspector-panel-width)
    right 0px
    margin 0px
    background-color white
    z-order 10
    transition 0.2s

    .inspector-panel-toggle
      height 100%
      float left
      margin 0px
      margin-left -8px
      padding 4px
      padding-top 50%
      cursor pointer
      background-color #eee

  .inspector-panel-content
    margin 2em

  .inspector-panel-collapsed
    right (-1 * inspector-panel-width) + 15
    width inspector-panel-width
    transition 0.2s

