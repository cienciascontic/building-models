$protoNodeDimension = 40px
$paletteItemPadding = 4px
$paletteItemDimension = $protoNodeDimension + (2 * $paletteItemPadding)
$paletteRowHeight = 80px
$paletteHieght = $paletteRowHeight * 3

pal-image-size()
  max-height $protoNodeDimension
  max-width $protoNodeDimension
  padding 0px
  margin 0px
  vertical-align middle
  text-align center
  box-sizing border-box

.palette-inspector
  background-color white
  margin 0px
  padding 0px
  .palette
    margin 0px
    padding-top 0px
    margin-top 0px
    max-height $paletteHieght
    overflow auto
    .palette-image
      height $paletteItemDimension
      width $paletteItemDimension
      padding 0
      float left
      margin 10px
      box-sizing border-box
      enable-flex(direction:row, wp:nowrap, justify:center, alignContent:center, alignItems:center)
      border 2px solid none
      .proto-node
        pal-image-size()
        .img-background
          pal-image-size()
          img
            pal-image-size()
      &.selected
        border 2px solid #72BDCB
        border-radius 5px

    .palette-add-image
      width $paletteItemDimension
      height $paletteItemDimension
      box-sizing border-box
      line-height 1.25em
      padding-top 1em
      vertical-align middle
      font-size 10px
      text-align center
      cursor pointer
      border 2px dashed #a1d2d9
      color #a1d2d9
      i
        display block
        margin 5px
        font-size 12px

  .palette-about-image
    margin-top 10px
    padding 15px 20px
    background-color #ebebeb
    .palette-about-image-title
      i
        color #00889f
      span
        label-font(weight: bold)
        margin 0 5px
      img
        max-width 40px
        max-height 40px
        margin-left 15px
        vertical-align text-bottom
    .palette-about-image-info
      margin-top 20px
      line-height 1.75em
      color #444444
      a
        color #72bfca
        text-decoration none
