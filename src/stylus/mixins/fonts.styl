@import url(http://fonts.googleapis.com/css?family=Montserrat:400,700)

default-font(style=normal, variant=normal, weight=normal, size=12px)
  font-style style
  font-variant variant
  font-weight weight
  font-size size
  font-family 'Montserrat' sans-serif

label-font(style=normal, variant=normal, weight=normal, size=12px)
  default-font(style:style, variant:variant, weight:weight, size:size)
  font-family 'Museo Sans' 'Montserrat' sans-serif
  text-transform uppercase

