.image-picker
  background-color white
  padding 4px
  width 100px
  border-radius 2px
  display inline-block
  vertical-align top
  margin-top 12px
  overflow hidden
  cursor pointer
  no-select()
  &.closed
    .color-choice
      display none
      padding 0px
      &.selected
        display block
 .image-choice
    img.image-choice
      padding 4px
      border 3px solid red
      width 20px
      height 20px
