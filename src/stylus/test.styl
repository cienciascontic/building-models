.test-container
  width 100%
  height 100%
  enable-flex(alignItems:center, justify:center)

#test
  enable-flex(alignContent:center)
  padding: 20px
  background-color white
  border 1px solid black

.dev-info
  position fixed
  bottom 0px
  background-color: hsla(20,40%,90%,0.8)
  padding 1em
  left 20%
  right 20%

  .inline-code
    font-family monospace
    font-weight bold

  .code
    font-family monospace
    white-space pre
    font-weight bold
    overflow scroll
    background-color hsla(100,0%,40%, 0.2)
    color hsla(20,60%,20%,1.0)
    padding 1em
    margin-top 1em
    border-radius 0.5em
