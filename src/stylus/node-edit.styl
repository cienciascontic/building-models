.node-edit-view
  padding 1em
  margin 0.5em
  box-shadow 4px 4px 10px hsla(1,0,0,0.2)
  border-radius 10px
  min-width  100px
  text-align right
  
  display flex
  flex-direction column
  flex-wrap wrap
  justify-content flex-start
  align-content space-around
  
  display -webkit-flex
  -webkit-flex-direction column
  -webkit-flex-wrap wrap
  -webkit-justify-content flex-start
  -webkit-align-content space-around

  &.hidden
    display none
  .edit-row
    padding 0.2em
  label
    font-weight bold
    margin-right 2em