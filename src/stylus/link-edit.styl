.link-edit-view
  padding 1em
  margin 2px
  margin-bottom 2em
  box-shadow 4px 4px 10px hsla(1,0,0,0.2)
  border-radius 10px
  min-width  100px
  text-align left
  
  display flex
  flex 1 0 0;
  flex-direction column
  flex-wrap wrap
  justify-content flex-start
  align-content space-around
  
  display -webkit-flex
  -webkit-flex 1 0 0;
  -webkit-flex-direction column
  -webkit-flex-wrap wrap
  -webkit-justify-content flex-start
  -webkit-align-content space-around

  .row
    padding 0.5em
    white-space nowrap

  &.hidden
    display none
  label
    font-weight bold
    margin-right 1.5em
  
  .colorChoice
    display inline-block
    vertical-align bottom
    margin 2px
    width 20px
    height 20px
    border-radius 4px
